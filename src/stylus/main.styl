@import "nib"

*
	padding 0
	margin 0

body
	font-size 17px
	font-family 'Nixie One', cursive
	background url("../img/pic01.jpg")
	background-size cover
	
h1, h2
	font-family 'Raleway', cursive
	
.background
	background rgba(#000,.41)
	width 100%
	height 100vh

.header
	color #fff
	text-align center
	h2 
		margin-top 1em
		font-size 3em
		text-shadow 0 0 15px rgba(#000,.5)
nav
	background rgba(#000,.08)
	padding .5em
.nav 
	width 50%
	margin auto
	display flex
	justify-content space-between
	align-items center
	
	&__item
		line-height 1.5
		list-style none
		a
			display block
			padding .3em .8em
			text-decoration none
			color #fff
			font-size 1.2em
			font-weight bold
			border-radius 8px
			&:hover
				background rgba(#000,.2)


.contenido
	width 100%
	color #fff
	margin-top 2em
	h2
		text-align center
		font-size 3em
		
	p
		text-align center
		font-size 1.5em